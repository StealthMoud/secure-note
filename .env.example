# Server Settings
# Port for the backend server (used by Express.js in backend)
PORT=5002
# MongoDB URI for backend to connect to the database
MONGO_URI=mongodb://<MONGO_USER>:<MONGO_PASSWORD>@mongodb:27017/secure-note?tls=true&tlsCertificateKeyFile=/app/certs/mongodb.pem

# Backend and Frontend URLs (used by frontend and proxy for API requests)
BACKEND_URL=http://localhost:5002
FRONTEND_URL=http://localhost:3000

# Security
# Secret key for signing JWT tokens (used by backend for authentication)
JWT_SECRET=your_jwt_secret_here
# RSA private key for encryption/signing (used by backend, replace with actual key)
RSA_PRIVATE_KEY=your_rsa_private_key_here
# RSA public key for verifying signatures (used by backend, replace with actual key)
RSA_PUBLIC_KEY=your_rsa_public_key_here

# OAuth
# Google OAuth credentials for user authentication
OAUTH_GOOGLE_CLIENT_ID=your_google_client_id_here
OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# GitHub OAuth credentials for user authentication
OAUTH_GITHUB_CLIENT_ID=your_github_client_id_here
OAUTH_GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Email Settings
# SMTP settings for sending emails (e.g., for password resets, notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email_user_here
EMAIL_PASS=your_email_password_here

# MongoDB Credentials
# Username for MongoDB root user (used by mongodb container and backend)
MONGO_USER=your_mongo_username_here
# Password for MongoDB root user (used by mongodb container and backend)
MONGO_PASSWORD=your_mongo_password_here